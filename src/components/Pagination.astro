---
type Props = {
  prevURL?: string
  nextURL?: string
}

const { prevURL, nextURL } = Astro.props
---

<div class="flex items-center justify-between">
  {
    prevURL ? (
      <a
        href={prevURL}
        class="rounded-xl bg-black px-6 py-3 text-lg text-white"
      >
        Previous
      </a>
    ) : (
      <span />
    )
  }
  {
    nextURL ? (
      <a
        href={nextURL}
        class="rounded-xl bg-black px-6 py-3 text-lg text-white"
      >
        Next
      </a>
    ) : (
      <span />
    )
  }
</div>
