---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

type Props = {
  post: CollectionEntry<'posts'>
}

const { post: rawPost } = Astro.props
const { data: post, slug, body } = rawPost
---

<article>
  <a href={`/blog/${slug}`}>
    <Image
      src={post.image}
      alt={post.title}
      width={600}
      height={600 / 1.5}
      class="mb-6 aspect-thubnail rounded-2xl object-cover shadow-xl"
    />
  </a>
  <a href={`/blug/${slug}`} class="mb-4 inline-block text-3xl">
    <h2>{post.title}</h2>
  </a>
  <p class="line-clamp-2 text-lg">
    {body}
  </p>
</article>
